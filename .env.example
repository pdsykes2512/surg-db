# Environment variables - NON-SECRET configuration only
# IMPORTANT: Secrets are stored in /etc/impact/secrets.env (not in version control)
# This file contains only non-sensitive configuration values

# Server Hostname Configuration
# This hostname is used for CORS, allowed hosts, and documentation
SERVER_HOSTNAME=impact.vps
FRONTEND_PORT=3000

# MongoDB Configuration (non-secret)
# Use 'impact' for production, 'impact_test' for test database
MONGODB_DB_NAME=impact

# GitHub Configuration (non-secret)
GITHUB_USERNAME=your_github_username

# Backend API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Backend Host/Port for Vite Proxy (frontend connects here)
BACKEND_HOST=192.168.11.238
BACKEND_PORT=8000

# Session Timeout Settings (in minutes/days)
# IMPORTANT: Must match frontend VITE_SESSION_TIMEOUT_MINUTES for proper synchronization
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
SESSION_WARNING_MINUTES=5

